import java.util.Scanner;

public class Main {
    public static void main(String[] args) {

        Scanner scanner = new Scanner(System.in);

        double vGefahren;
        String geschwindigkeit = "km/h";

        System.out.print("Ort des Blitzens I (Innerorts) oder A (Außerorts)?: ");
        String ortInput = scanner.nextLine();
        char ort = ortInput.charAt(0);

        System.out.print("Gefahrene Geschwindigkeit in km/h: ");
        vGefahren = scanner.nextDouble();

        System.out.print("Erlaubte Geschwindigkeit in km/h: ");
        double vErlaubt = scanner.nextDouble();


        double vDifferenz = vGefahren - vErlaubt;

        if (vGefahren < 0 || vErlaubt < 0 || vDifferenz < 0) {
            System.out.println("Keine Überschreitung.");
            return;
        }

        int strafe = 0;
        int punkte = 1;
        int fahrverbot = 1;
        boolean LohnEinspruch = false;

        if (ort == 'I') {
            if (vDifferenz <= 50) {
                strafe = 0;
                fahrverbot = 0;
            }
            else if (vDifferenz > 100) {
                strafe = 20;
                punkte = 1;
            }
        }else /*if (ort == 'A')*/ {
            if (vDifferenz <= 100) {
                strafe = 0;
            }
            else if (vDifferenz > 100) {
                strafe = 20;
                punkte = 1;
            }
        }

        if (strafe == 0) {
            System.out.println("Glück gehabt! Keine Sanktionen");
        }
        else {
            System.out.println("Überschreitung: " + (int) vDifferenz + geschwindigkeit);
            System.out.println("Geldstrafe: " + strafe + "€.");

            if (punkte > 0) {
                System.out.println("Anzahl der Punkte: " + punkte);
            }
            if (fahrverbot > 0) {
                System.out.println("Anzahl der Strafe: " + strafe);
            }
            if (LohnEinspruch) {
               System.out.println("ABER: Ein Anwalt könnte helfen");
            }
        }

        scanner.close();
    }
}
